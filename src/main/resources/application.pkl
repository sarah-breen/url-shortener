server {
    port = 8080
  }

  spring {
    datasource {
      url = "jdbc:h2:mem:urlshortener"
      driverClassName = "org.h2.Driver"
      username = "sa"
      password = ""
    }

    jpa {
      databasePlatform = "org.hibernate.dialect.H2Dialect"
      hibernate {
        ddlAuto = "create-drop"
      }
      showSql = true
    }

    h2 {
      console {
        enabled = true
        path = "/h2-console"
      }
    }
  }

